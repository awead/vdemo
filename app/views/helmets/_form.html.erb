<%= form_with(model: helmet, local: true) do |form| %>
  <% if @parent_id %>
    <%= form.hidden_field :parent_id, value: @parent_id %>
  <% end %>
  <div>
    <p>Title</p>
    <p><%= form.text_field :title %>
  </div>

  <div>
    <p>Creators</p>
    <p><%= form.text_field :creator %>
  </div>

  <div>
    <p>Image</p>
    <% if helmet && helmet.file_identifiers.first %>
      <p>file: <%= helmet.file_identifiers.first %>
    <% end %>
    <p><%= form.file_field :file, accept: 'image/png,image/gif,image/jpeg' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
